<section>
  <%= form_with model: @category do |f| %>

    <div class="form-group ">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit action_name, class: "btn btn-primary" %>
    </div>

  <% end %>
</section>